<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cardview_shadow_start_color"
    android:padding="16dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txtTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 May 2025, 14:25"
        android:textColor="#4D4B4B"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sipDurum"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:src="@drawable/outer_circle"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtUrunAdi"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Ürün Adı"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtUrunFiyatı"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Ürün Fiyatı: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtTutar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Toplam: 25₺"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>